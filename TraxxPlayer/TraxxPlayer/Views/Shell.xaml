<Page x:Class="TraxxPlayer.Views.Shell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Controls="using:Template10.Controls"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:TraxxPlayer.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:TraxxPlayer.Views"
      xmlns:data="using:BackgroundAudioShared"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="ListViewItemStyle1"
               TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter ContentMargin="0,5,0,0" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="ImageOverlayTemplate"
                      x:DataType="data:SoundCloudTrack">
            <StackPanel Height="130"
                        RightTapped="StackPanel_RightTapped"
                        Width="190">
                <FlyoutBase.AttachedFlyout>
                    <Flyout Placement="Left">
                        <Button Content="Remove from playlist">
                            <Button.Flyout>
                                <Flyout>
                                    <GridView ItemsSource="{Binding DataContext.Playlists, ElementName=ChartsPage}">
                                        <GridView.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding Name}"
                                                        Command="{Binding DataContext.AddTrackToPlaylistCommand, ElementName=ChartsPage}"
                                                        CommandParameter="{Binding}" />
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                    </GridView>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </Flyout>
                </FlyoutBase.AttachedFlyout>
                <TextBlock Text="{x:Bind title}"
                           Width="186"
                           Style="{StaticResource BaseTextBlockStyle}"
                           HorizontalAlignment="Left"
                           Foreground="White" />
                <Image Source="{x:Bind AlbumArtUri}"
                       Stretch="UniformToFill" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ImageOverlayTemplateNormal"
                      x:DataType="data:SoundCloudTrack">
            <StackPanel Height="130"
                        Width="95">
                <TextBlock Text="{x:Bind title}"
                           Width="95"
                           FontSize="10"
                           Style="{StaticResource BaseTextBlockStyle}"
                           HorizontalAlignment="Left"
                           Foreground="White" />
                <Image Source="{x:Bind AlbumArtUri}"
                       Stretch="UniformToFill" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ImageOverlayTemplateMin"
                      x:DataType="data:SoundCloudTrack">
            <StackPanel Height="75"
                        Width="95">
                <Image Source="{x:Bind AlbumArtUri}"
                       Stretch="UniformToFill" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <Setter Target="lstViewPlaylist.ItemTemplate"
                                Value="{StaticResource ImageOverlayTemplateMin }" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <Setter Target="lstViewPlaylist.ItemTemplate"
                                Value="{StaticResource ImageOverlayTemplateNormal }" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                        <Setter Target="lstViewPlaylist.ItemTemplate"
                                Value="{StaticResource ImageOverlayTemplate }" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Controls:HamburgerMenu x:Name="MyHamburgerMenu">

            <Controls:HamburgerMenu.PrimaryButtons>
                <!--  mainpage button  -->
                <Controls:HamburgerButtonInfo ClearHistory="True"
                                              PageType="views:MainPage"
                                              AutomationProperties.Name="Jerry">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48"
                                    Height="48"
                                    Symbol="Home" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="Home" />
                    </StackPanel>
                </Controls:HamburgerButtonInfo>
                <Controls:HamburgerButtonInfo ClearHistory="True"
                                              PageType="views:NowPlaying"
                                              AutomationProperties.Name="Jerry">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48"
                                    Height="48"
                                    Symbol="Play" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="NowPlaying" />
                    </StackPanel>
                </Controls:HamburgerButtonInfo>
                <Controls:HamburgerButtonInfo ClearHistory="True"
                                              PageType="views:Me"
                                              AutomationProperties.Name="Jerry">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48"
                                    Height="48"
                                    Symbol="Contact" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="Me" />
                    </StackPanel>
                </Controls:HamburgerButtonInfo>
                <Controls:HamburgerButtonInfo ClearHistory="True"
                                              PageType="views:Likes"
                                              AutomationProperties.Name="Jerry">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48"
                                    Height="48"
                                    Symbol="Like" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="Likes" />
                    </StackPanel>
                </Controls:HamburgerButtonInfo>
                <Controls:HamburgerButtonInfo ClearHistory="True"
                                              PageType="views:Charts"
                                              AutomationProperties.Name="Jerry">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48"
                                    Height="48"
                                    Symbol="Go" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="Charts" />
                    </StackPanel>
                </Controls:HamburgerButtonInfo>
                <Controls:HamburgerButtonInfo ClearHistory="True"
                                              PageType="views:Playlists"
                                              AutomationProperties.Name="Jerry">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48"
                                    Height="48"
                                    Symbol="List" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="Playlists" />
                    </StackPanel>
                </Controls:HamburgerButtonInfo>

            </Controls:HamburgerMenu.PrimaryButtons>

            <Controls:HamburgerMenu.SecondaryButtons>
                <!--  settingspage button  -->
                <Controls:HamburgerButtonInfo x:Name="SettingsButton"
                                              PageParameter="0"
                                              PageType="views:SettingsPage">
                    <Controls:HamburgerButtonInfo.NavigationTransitionInfo>
                        <SuppressNavigationTransitionInfo />
                    </Controls:HamburgerButtonInfo.NavigationTransitionInfo>
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48"
                                    Height="48"
                                    Symbol="Setting" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="Settings" />
                    </StackPanel>
                </Controls:HamburgerButtonInfo>
            </Controls:HamburgerMenu.SecondaryButtons>

        </Controls:HamburgerMenu>
        <ScrollViewer x:Name="scrollViewerPlaylist"
                      Grid.Column="1"
                      Width="Auto"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Hidden"
                      Background="{x:Bind MyHamburgerMenu.NavAreaBackground}">
            <ListView x:Name="lstViewPlaylist"
                      ItemContainerStyle="{StaticResource ListViewItemStyle1}"
                      ItemTemplate="{StaticResource ImageOverlayTemplate }"
                      ItemsSource="{Binding PlaylistManager.Tracks}"
                      IsItemClickEnabled="True"
                      ItemClick="lstViewPlaylist_ItemClick">
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>

